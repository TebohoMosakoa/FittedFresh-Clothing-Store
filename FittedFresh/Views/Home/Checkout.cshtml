@using FittedFresh.Models.Home;

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>

@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No products in cart</strong>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Product</td>
                <td>Quantiy</td>
                <td>Increase / Decrease Quantity</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Item item in (List<Item>)Session["cart"])
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a href="@Url.Action("AddToCart","Home", new { productId = item.Product.ProductId, url = "Checkout" })">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a href="@Url.Action("DecreaseQuantiy","Home", new { productId = item.Product.ProductId})">
                            <i class="fa fa-minus"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" href="@Url.Action("CheckoutDetails","Home")">Checkout >></a>
}