@model FittedFresh.Models.Home.HomeIndexViewModel
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";
}

    <div id="themeSlider" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
            <li data-target="#themeSlider" data-slide-to="1"></li>
            <li data-target="#themeSlider" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <div class="imgOverlay"></div>
                <img style="height:600px;width:100%" src="~/Images/stan.jpg" alt="First slide">
                <div class="carousel-caption">
                    <h3>Classic Adidas stan Smith Puple.</h3>
                </div>
            </div>
            <div class="item">
                <div class="imgOverlay"></div>
                <img style="height:600px;width:100%" src="~/Images/skeleton.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h3>Nike Air Force 1 Skeleton Black.</h3>
                </div>
            </div>
            <div class="item">
                <div class="imgOverlay"></div>
                <img style="height:600px;width:100%" src="~/Images/suede.jpg" alt="Third slide">
                <div class="carousel-caption">
                    <h3>Classic Puma Suede Black And White</h3>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#themeSlider" data-slide="prev">
            <span class="fa fa-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#themeSlider" data-slide="next">
            <span class="fa fa-chevron-right"></span>
        </a>
    </div>
<div class="olContent f1">
    <h2 style="color:black">Search For A Product Or Category</h2>
</div>
<form method="post">
    <div class="olSearch fr">
        <input type="text" placeholder="Product name or category" name="search" class="inputComn houseText form-control" />
        <div class="searchIcon">
            <button type="button" class="searchBtn">
                <img src="~/Images/searchIcon.png" />
            </button>
        </div>
    </div>
</form>


<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Current Products</h2>
        </div>
    </div>
</div>

<div class="row product-container">
    @foreach (var item in Model.ProdcutList)
    {
        <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
            <div class="thumbnail product-item" style="height:300px">
                <img class="img-responsive" title="Click to view product" style="cursor:pointer;height:160px;width:260px" src="@item.ProductImage" />

                <div class="caption">
                    <h5>@item.ProductName</h5>

                    <p>Price: @item.Price </p>
                    <p>
                        @if (item.Quantity > 0)
                        {
                            using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductId }, FormMethod.Post))
                            {
                                <button type="submit" class="pull-right"><i class="fa fa-shopping-cart"></i></button>
                            }

                            if (item.Quantity > 20)
                            {
                                <text>Available</text>
                            }
                            else
                            {
<p>@item.Quantity Pairs Left</p>
                        }
                    }
                    else
                    {
                        <text> Out Of Stock</text>
                    }
                        </p>

                        @if (item.IsFeatured == true)
                        {
                            <div class="product-item-badge">
                                New
                            </div>
                        }
                        else
                        {<div class="product-item-badge" hidden></div>}
                    </div>
            </div>
        </div>
    }
    
</div>
<div class="container">
    @Html.PagedListPager(Model.ProdcutList, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }))
</div>
