@using FittedFresh.Models.Home;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FittedFresh</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="~/Views/Home/Index.cshtml">Fitted <span>Fresh</span></a></h1>
                </div>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Cart<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @if (Session["cart"] != null)
                        {
                            foreach (var Item in (List<Item>)Session["cart"])
                            {
                                <li><a href="@Url.Action("RemoveFromCart","Home", new { productId = Item.Product.ProductId })">@Item.Product.ProductName (@Item.Quantity)<i class="fa fa-times"></i></a></li>
                            }
                        }
                        <li class="divider"></li>
                        <li><a href="../Home/Checkout">Checkout</a></li>
                    </ul>
                </li>
            </ul>
            <div class=" row">
                <div class=" col-md-12">
                    <div class="nav-menus">
                        <ul class="nav nav nav-pills">
                            <li><a style="border-radius:initial;" href="../Home/Index">Home</a></li>
                            <li><a style="border-radius:initial;" href="#">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">
                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - Fitted Fresh</p>
                    </div>
                    <div class="col-md-6 col-sm-6 copyright-right">
                        <ul class="list-unstyled list-social">
                            <li><a href="www.facebook.com" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="www.twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
         </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
