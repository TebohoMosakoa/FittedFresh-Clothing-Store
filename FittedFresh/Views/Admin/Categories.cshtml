@model  List<FittedFresh.DAL.Tbl_Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>Category Listing
            <a class="btn btn-success" href="../Admin/CategoryAdd" style="float:right">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category Name</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model)
                        {
                        <tr>
                            <td>@(Model.IndexOf(category) + 1)</td>
                            <td>@category.CategoryName</td>
                            <td>
                                @Html.ActionLink("Edit", "CategoryEdit", new { categoryId = category.CategoryId })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>