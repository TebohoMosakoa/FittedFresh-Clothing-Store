@model IEnumerable<FittedFresh.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>Product Listing
        <a class="btn btn-success" href="../Admin/ProductAdd" style="float:right">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var product in Model)
                    {
                        int count = 1;
                        <tr>
                            <td>@count</td>
                            <td>@product.ProductName</td>
                            <td>@product.CategoryId</td>
                            <td>@product.Price</td>
                            <td>
                                @Html.ActionLink("Edit","ProductEdit", new { productId = product.ProductId})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>